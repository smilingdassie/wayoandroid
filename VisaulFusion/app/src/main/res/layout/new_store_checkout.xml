<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login_activty"
    tools:context="com.dsouchon.wayo.visualfusion.RepInfoActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroud_gradient"
    >


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="20dp">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView


                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtStoreName"
                android:textSize="20dp"
                android:backgroundTint="#efefef"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textColorHint="#8f8f8f"
                android:layout_marginTop="10dp"
                android:text="Store name"
                android:layout_weight="1" />

            <TextView


                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtURN"
                android:textSize="20dp"
                android:backgroundTint="#efefef"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textColorHint="#8f8f8f"
                android:layout_marginTop="10dp"
                android:text="URN"
                android:layout_weight="1" />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView


                android:id="@+id/txtHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#efefef"
                android:text="All Complete. Good Job!"
                android:textColor="#000000"
                android:textColorHint="#8f8f8f"
                android:textSize="20dp"
                />


        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="136dp"
            android:layout_weight="1"
            android:orientation="horizontal">




            <Spinner
                android:id="@+id/spinnerInstallStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"

                />




        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <EditText
            android:id="@+id/txtComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:hint="[Comment]"
            android:textSize="24sp"
            android:visibility="visible"
            android:inputType="textMultiLine"
            />
        <Button
            android:id="@+id/btn3"
            android:onClick="CheckOut"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:text="Check out"
            android:backgroundTint="#fdc313"
            android:textSize="24sp"
            android:textColor="#ffffff"/>






        <Button
            android:id="@+id/btn1c"
            android:onClick="Cancel"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:text="Cancel"
            android:backgroundTint="#fdc313"
            android:textColor="#ffffff"
            android:textSize="24sp" />
    </LinearLayout>


</RelativeLayout>
