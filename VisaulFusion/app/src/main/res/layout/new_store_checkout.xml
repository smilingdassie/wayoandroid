<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login_activty"
    tools:context="com.example.donavan.visaulfusion.RepInfoActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroud_gradient"
    >


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="20dp">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView


                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtStoreName"
                android:textSize="20dp"
                android:backgroundTint="#efefef"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textColorHint="#8f8f8f"
                android:layout_marginTop="10dp"

                android:layout_weight="1" />

            <TextView


                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtURN"
                android:textSize="20dp"
                android:backgroundTint="#efefef"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textColorHint="#8f8f8f"
                android:layout_marginTop="10dp"

                android:layout_weight="1" />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">


        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Spinner
                android:id="@+id/spinnerInstallStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#a9a9a9"></LinearLayout>




        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#a9a9a9">




        </LinearLayout>
        <TextView

            android:text="Gps Co-ordinates:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/two"
            android:textSize="20dp"
            android:backgroundTint="#efefef"
            android:textColor="#000000"
            android:textColorHint="#8f8f8f"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"

            android:layout_weight="1" />
        <TextView

            android:hint="Gps Co-ordinates:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtGpsLatLng"
            android:textSize="20dp"
            android:backgroundTint="#efefef"
            android:textColor="#000000"
            android:textColorHint="#8f8f8f"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"

            android:layout_weight="1" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#a9a9a9">




        </LinearLayout>
        <TextView
            android:text="Enter Mileage:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:layout_weight="1"
            android:layout_marginTop="40dp"
            android:textSize="20sp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="0"
            android:hint="Enter Mileage"
            android:backgroundTint="#efefef"
            android:textColor="#484848"
            android:textColorHint="#8f8f8f"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:id="@id/editMileage"

            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn3"
            android:onClick="CheckOut"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:text="Checkout"
            android:backgroundTint="#fdc313"
            android:textColor="#ffffff"/>




        <Button
            android:id="@+id/btn23"
            android:onClick="Home"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:text="Home"
            android:backgroundTint="#fdc313"
            android:textColor="#ffffff"/>

        <Button
            android:id="@+id/btn1c"
            android:onClick="Cancel"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:text="Cancel"
            android:backgroundTint="#fdc313"
            android:textColor="#ffffff"
            android:textSize="24sp" />
    </LinearLayout>


</RelativeLayout>
