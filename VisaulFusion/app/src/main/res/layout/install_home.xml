<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/instilation_home_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.donavan.visaulfusion.InstallHome">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/logo"
                android:id="@+id/imageView2"
                android:layout_gravity="center_vertical|center_horizontal"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src= "@drawable/install"
                android:id="@+id/imageView3"
                android:layout_weight="1"
                android:layout_gravity="center_vertical|center_horizontal"
                android:padding="25dp" />

            <TextView
                android:text="Please wait ... data loading..."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtPleaseWait"
                android:textSize="24sp" />


        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minWidth="350dp"
                android:maxWidth="100dp"
                android:minHeight="60dp">


                <Button
                    android:text="My Appointments"
                    android:id="@+id/InstallAppoint"
                    android:onClick="InstallAppointments"
                    android:textSize="10dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:textColor="#ffffff"
                    android:backgroundTint="#fdc313"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1" />

                <Button
                    android:text="Unitary Lists"
                    android:id="@+id/UnitaryLists"
                    android:onClick="UnitaryList"
                    android:textSize="10dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:textColor="#ffffff"
                    android:backgroundTint="#fdc313"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1" />



            </LinearLayout>

           

        </LinearLayout>
    </LinearLayout>



</RelativeLayout>
