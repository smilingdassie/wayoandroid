<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ware_house_accept_request_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.dsouchon.wayo.visualfusion.WareHouseAcceptRequest">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView

                        android:hint="Store"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtStoreNameLbl"
                        android:backgroundTint="#efefef"
                        android:textColor="#484848"
                        android:textColorHint="#8f8f8f"
                        android:layout_marginTop="10dp"

                        android:layout_weight="1" />

                    <TextView
                        android:hint="[Store Name]"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtStoreName"
                        android:backgroundTint="#efefef"
                        android:textColor="#484848"
                        android:textColorHint="#8f8f8f"
                        android:layout_marginTop="10dp"

                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView

                        android:hint="URN"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtURNLbl"
                        android:backgroundTint="#efefef"
                        android:textColor="#484848"
                        android:textColorHint="#8f8f8f"
                        android:layout_marginTop="10dp"

                        android:layout_weight="1" />

                    <TextView
                        android:hint="[URN]"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtURN"
                        android:backgroundTint="#efefef"
                        android:textColor="#484848"
                        android:textColorHint="#8f8f8f"
                        android:layout_marginTop="10dp"

                        android:layout_weight="1" />
                </LinearLayout>


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:hint="Contact Person"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtContactPersonLbl"
                        android:backgroundTint="#efefef"
                        android:textColor="#484848"
                        android:textColorHint="#8f8f8f"
                        android:layout_marginTop="10dp"

                        android:layout_weight="1" />

                    <TextView
                        android:hint="[Contact Person]"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtContactPerson"
                        android:backgroundTint="#efefef"
                        android:textColor="#484848"
                        android:textColorHint="#8f8f8f"
                        android:layout_marginTop="10dp"

                        android:layout_weight="1" />
                </LinearLayout>


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:hint="Contact Email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtContactEmailLbl"
                        android:backgroundTint="#efefef"
                        android:textColor="#484848"
                        android:textColorHint="#8f8f8f"
                        android:layout_marginTop="10dp"

                        android:layout_weight="1" />

                    <TextView
                        android:hint="[Contact Email]"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtContactEmail"
                        android:backgroundTint="#efefef"
                        android:textColor="#484848"
                        android:textColorHint="#8f8f8f"
                        android:layout_marginTop="10dp"

                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:hint="Contact Phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtContactPhoneLbl"
                        android:backgroundTint="#efefef"
                        android:textColor="#484848"
                        android:textColorHint="#8f8f8f"
                        android:layout_marginTop="10dp"

                        android:layout_weight="1" />

                    <TextView
                        android:hint="[Contact Phone]"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtContactPhone"
                        android:backgroundTint="#efefef"
                        android:textColor="#484848"
                        android:textColorHint="#8f8f8f"
                        android:layout_marginTop="10dp"

                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:hint="Opening Time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtOpeningTimeLbl"
                        android:backgroundTint="#efefef"
                        android:textColor="#484848"
                        android:textColorHint="#8f8f8f"
                        android:layout_marginTop="10dp"

                        android:layout_weight="1" />

                    <TextView
                        android:hint="[Opening Time]"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtOpeningTime"
                        android:backgroundTint="#efefef"
                        android:textColor="#484848"
                        android:textColorHint="#8f8f8f"
                        android:layout_marginTop="10dp"

                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:hint="Closing Time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtClosingTimeLbl"
                        android:backgroundTint="#efefef"
                        android:textColor="#484848"
                        android:textColorHint="#8f8f8f"
                        android:layout_marginTop="10dp"

                        android:layout_weight="1" />

                    <TextView
                        android:hint="[Closing Time]"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtClosingTime"
                        android:backgroundTint="#efefef"
                        android:textColor="#484848"
                        android:textColorHint="#8f8f8f"
                        android:layout_marginTop="10dp"

                        android:layout_weight="1" />
                </LinearLayout>



                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:hint="Total Units "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtTotalUnitCountLbl"
                        android:backgroundTint="#efefef"
                        android:textColor="#484848"
                        android:textColorHint="#8f8f8f"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1" />

                    <TextView
                        android:hint="[Total Units]"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtTotalUnitCount"
                        android:backgroundTint="#efefef"
                        android:textColor="#484848"
                        android:textColorHint="#8f8f8f"
                        android:layout_marginTop="10dp"

                        android:layout_weight="1" />


                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:hint="Progress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtCurrentPhaseLbl"
                        android:backgroundTint="#efefef"
                        android:textColor="#484848"
                        android:textColorHint="#8f8f8f"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1" />

                    <TextView
                        android:hint="[Progress]"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtCurrentPhase"
                        android:backgroundTint="#efefef"
                        android:textColor="#484848"
                        android:textColorHint="#8f8f8f"
                        android:layout_marginTop="10dp"

                        android:layout_weight="1" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">



                <Button
                    android:id="@+id/btn2"
                    android:onClick="AcceptRequest"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    android:text="Accept Request"
                    android:backgroundTint="#fdc313"
                    android:textColor="#ffffff"
                    android:layout_weight="1"/>

                <TextView
                    android:text="ID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linearLayout"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="60dp"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="31dp"
                    android:visibility="gone"
                    android:id="@+id/txtID" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>





</RelativeLayout>
