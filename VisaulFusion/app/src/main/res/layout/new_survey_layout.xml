<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.dsouchon.wayo.visualfusion.SurveyActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/backgroud_gradient">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="80">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="80"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#484848"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:gravity="left|center_vertical"
                            android:padding="10dp"
                            android:textAlignment="gravity"
                            app:srcCompat="@drawable/header_home" />

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_marginLeft="20dp"
                            android:gravity="center_vertical"
                            android:text="Survey"
                            android:textAlignment="gravity"
                            android:textColor="#ffffff"
                            android:textSize="20dp" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="80"
                    android:orientation="vertical"
                    android:padding="20dp">


                    <TextView
                        android:id="@+id/textView1101"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:backgroundTint="#efefef"
                        android:text="OPENING INSTRUCTION:"
                        android:textColor="#8f8f8f"
                        android:textColorHint="#8f8f8f"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/textView11011"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:backgroundTint="#efefef"
                        android:text="Once you have arrived at the outlet be sure to check in (to capture GPS coordinates) make sure that you are at the outlet when doing this."
                        android:textColor="#8f8f8f"
                        android:textColorHint="#8f8f8f"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/textView11012"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:backgroundTint="#efefef"
                        android:text="Take at least one picture of the outside of the outlet."
                        android:textColor="#8f8f8f"
                        android:textColorHint="#8f8f8f"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/textView1103"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:backgroundTint="#efefef"
                        android:text="Introduce yourself to the outlet owner and manager, explaining that you are part of the Project Lighthouse Survey team, and that you are there to survey the outlet prior to installation."
                        android:textColor="#8f8f8f"
                        android:textColorHint="#8f8f8f"
                        android:textSize="18dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="80"
                    android:orientation="vertical"
                    android:padding="20dp">


                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:backgroundTint="#efefef"
                        android:text="1.What is the name of the person you are talking to?"
                        android:textColor="#8f8f8f"
                        android:textColorHint="#8f8f8f"
                        android:textSize="18dp" />

                    <EditText

                        android:id="@+id/editTalkingToPerson"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#efefef"
                        android:hint="[Enter Name]"
                        android:textColor="#484848"
                        android:textColorHint="#8f8f8f"

                        />

                    <TextView
                        android:id="@+id/textView101"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:backgroundTint="#efefef"
                        android:text="2.What is their position / role?"
                        android:textColor="#8f8f8f"
                        android:textColorHint="#8f8f8f"
                        android:textSize="18dp" />

                    <EditText

                        android:id="@+id/editTalkingToRole"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:backgroundTint="#efefef"
                        android:hint="[Enter Role/Position]"
                        android:textColor="#484848"
                        android:textColorHint="#8f8f8f" />

                    <TextView

                        android:id="@+id/three"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:backgroundTint="#efefef"
                        android:text="3.Is the outlet still committed to the installation?"
                        android:textColor="#8f8f8f"
                        android:textColorHint="#8f8f8f"
                        android:textSize="18dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">


                        <RadioGroup
                            android:id="@+id/radioCommitted"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <RadioButton
                                android:id="@+id/radioYes"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="140dp"
                                android:layout_weight="1"
                                android:backgroundTint="#8f8f8f"
                                android:onClick="onRadioButtonClicked"
                                android:text="Yes"
                                android:textColor="#8f8f8f"
                                android:textSize="18dp" />

                            <RadioButton
                                android:id="@+id/radioNo"

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:backgroundTint="#8f8f8f"
                                android:onClick="onRadioButtonClicked"
                                android:text="No"
                                android:textColor="#8f8f8f"
                                android:textSize="18dp" />


                        </RadioGroup>
                    </LinearLayout>

                    <TextView

                        android:id="@+id/txtWhyNotCommitted"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:backgroundTint="#efefef"
                        android:text="What is the reason the outlet is not committed?"
                        android:textColor="#8f8f8f"
                        android:textColorHint="#8f8f8f"
                        android:textSize="18dp"
                        android:visibility="gone" />

                    <EditText

                        android:id="@+id/editWhyNotCommitted"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="#efefef"
                        android:backgroundTint="#efefef"
                        android:hint="[Enter Reason]"
                        android:inputType="textMultiLine"
                        android:lines="3"
                        android:padding="5dp"
                        android:textColor="#484848"
                        android:textColorHint="#8f8f8f"
                        android:visibility="gone" />


                    <TextView

                        android:id="@+id/txtBrand"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:backgroundTint="#efefef"
                        android:text="4. Please confirm the brand that the outlet believes it is receiving?"
                        android:textColor="#8f8f8f"
                        android:textColorHint="#8f8f8f"
                        android:textSize="18dp"
                        android:visibility="gone" />

                    <Spinner
                        android:id="@+id/spinnerBrand"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="10dp"
                        android:background="#efefef"
                        android:orientation="horizontal"></LinearLayout>


                    <TextView

                        android:id="@+id/threed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="20dp"
                        android:backgroundTint="#efefef"
                        android:text="5. Please confirm outlet's trading hours?"
                        android:textColor="#8f8f8f"
                        android:textColorHint="#8f8f8f"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/txtOpen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#fcd207"
                        android:backgroundTint="#fcd207"
                        android:padding="5dp"
                        android:text="Set Opening Time"

                        android:textColor="#ffffff" />

                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">


                        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical">

                            <Spinner
                                android:id="@+id/spinnerOpeningTime"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </LinearLayout>


                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtClose"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#fcd207"
                        android:backgroundTint="#fcd207"
                        android:padding="5dp"
                        android:text="Set Closing Time"
                        android:textColor="#ffffff" />

                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">


                        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical">

                            <Spinner
                                android:id="@+id/spinnerClosingTime"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </LinearLayout>


                    </LinearLayout>

                    <TextView

                        android:id="@+id/txtPreferred"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="20dp"
                        android:backgroundTint="#efefef"
                        android:text="6. What time is best for delivery (during the day)? Please inform the client that they will be receiving approximately a pallet of unitry to store for 1-4 days."
                        android:textColor="#8f8f8f"
                        android:textColorHint="#8f8f8f"
                        android:textSize="18dp"
                        android:visibility="gone" />

                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal" android:visibility="gone">


                        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical" android:visibility="gone">

                            <Spinner
                                android:id="@+id/spinnerPreferredDeliveryTime"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:visibility="gone"/>

                        </LinearLayout>


                    </LinearLayout>

                    <TextView

                        android:id="@+id/threef"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:backgroundTint="#efefef"
                        android:text="7. General comments in regard to the outlet."
                        android:textColor="#8f8f8f"
                        android:textColorHint="#8f8f8f"
                        android:textSize="18dp" />

                    <EditText

                        android:id="@+id/editComments"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="#efefef"
                        android:backgroundTint="#efefef"
                        android:hint="Type comments here"
                        android:inputType="textMultiLine"
                        android:lines="3"
                        android:padding="5dp"
                        android:textColor="#484848"
                        android:textColorHint="#8f8f8f" />


                    <Button
                        android:id="@+id/viewstore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_marginTop="20dp"
                        android:backgroundTint="#fdc313"
                        android:drawableRight="@drawable/arrow"

                        android:gravity="left|center_vertical"
                        android:maxWidth="100dp"
                        android:minHeight="60dp"
                        android:minWidth="350dp"
                        android:onClick="SaveSurvey"
                        android:text="Next"
                        android:textAlignment="gravity"
                        android:textColor="#ffffff" />


                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>
