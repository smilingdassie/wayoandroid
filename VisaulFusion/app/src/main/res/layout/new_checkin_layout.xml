<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login_activty"
    tools:context="com.dsouchon.wayo.visualfusion.InstallGpsCheckin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroud_gradient"
    >


    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn1"
            android:onClick="Home"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:text="Home"
            android:backgroundTint="#fdc313"
            android:textColor="#ffffff"
            android:textSize="24sp" />
        <Button
            android:id="@+id/btn1c"
            android:onClick="Cancel"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:text="Cancel"
            android:backgroundTint="#fdc313"
            android:textColor="#ffffff"
            android:textSize="24sp" />


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView


                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtStoreName"
                android:textSize="18dp"
                android:backgroundTint="#efefef"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textColorHint="#8f8f8f"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"

                android:layout_weight="1" />
            <TextView


                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtURN"
                android:textSize="20dp"
                android:backgroundTint="#efefef"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textColorHint="#8f8f8f"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"

                android:layout_weight="1" />


        </LinearLayout>
        <TextView

            android:text="Gps Co-ordinates:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/two"
            android:textSize="20dp"
            android:backgroundTint="#efefef"
            android:textColor="#000000"
            android:textColorHint="#8f8f8f"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"

            android:layout_weight="1" />
        <TextView

            android:hint="Gps Co-ordinates:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtGpsLatLng"
            android:textSize="20dp"
            android:backgroundTint="#efefef"
            android:textColor="#000000"
            android:textColorHint="#8f8f8f"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"

            android:layout_weight="1" />



        <Button
            android:text="Check In To Site"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:backgroundTint="#fdc313"
            android:textColor="#ffffff"
            android:id="@+id/btnCheckIn"
            android:textSize="24sp"
            android:layout_below="@+id/txtStoreURN"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:onClick="CheckIn"
            />

    </LinearLayout>


</RelativeLayout>
